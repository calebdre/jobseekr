// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id
  createdAt DateTime @default(now())
  jobs      ProcessedJob[]
  searchSessions SearchSession[]
}

model ProcessedJob {
  id              String @id @default(cuid())
  userId          String
  title           String
  company         String
  location        String?
  salary          String?
  url             String
  content         String
  recommendation  String  // apply/maybe/skip
  fitScore        Int     // 1-5
  confidence      Int     // 1-5
  summary         String
  analysis        String
  jobSummary      String?
  fitSummary      String?
  whyGoodFit      String? // JSON array
  potentialConcerns String? // JSON array
  keyTechnologies String? // JSON array
  contentHash     String
  createdAt       DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id])
  @@index([userId])
  @@index([userId, url])
}

model SearchSession {
  id          String @id @default(cuid())
  userId      String
  status      String // 'pending' | 'in_progress' | 'completed' | 'failed'
  progress    Json   // { current: number, total: number, message: string }
  jobTitle    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  completedAt DateTime?
  
  user User @relation(fields: [userId], references: [id])
  @@index([userId])
  @@index([userId, status])
}
